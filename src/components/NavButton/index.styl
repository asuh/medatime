.NavButton {
  background-color black
  border-width .15rem
  color white
  cursor pointer
  height 14rem
  padding 1rem
  transition transform 500ms

  &[disabled] {
    background-color #333
    border-color #777
    color darkgray
    cursor no-drop
  }

  &.is-timer {
    transform translateX(50vw)
  }
}

.navButtonIcon {
  transition transform 500ms
  .is-timer & {
    transform rotate(180deg)
  }
}
