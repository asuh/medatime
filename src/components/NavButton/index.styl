.NavButtonContainer {
  display flex
}

.NavButtonState {
  flex 0
  transition flex 500ms

  &.is-timer {
    flex 1
  }
}

.NavButton {
  background-color black
  border 1px solid
  border-width .15rem
  color white
  cursor pointer
  height 14rem
  padding 1rem

  &[disabled] {
    background-color #333
    border-color #777
    color darkgray
    cursor no-drop
  }
}

.NavButtonIcon {
  transition transform 500ms
  .is-timer + .NavButton & {
    transform rotate(180deg)
  }
}
