.QuoteDisplay
  font-family helvetica, sans-serif
  color white
  max-width 400px
  min-height 12rem
  margin 0 auto
  padding-right 18px
  text-align center
  display flex
  justify-content center
  flex-direction column
  opacity 0
  transition all .3s ease

  &-visible
    opacity 1

  &-quote
    font-size 24px

  &-reference
    font-size 18px
    opacity .7
    margin-left 50%
